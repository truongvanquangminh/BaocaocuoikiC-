@model ModelEF.Model.UserAccount

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ShopGiayTheThao/Views/Shared/_Layout.cshtml";
}

@section header {
    <i class="fa fa-save"></i>&nbsp; Tạo người dùng mới
}

@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <p>
            @Html.ActionLink("Quay lại", "Index", "User", new { @class = "btn btn-primary" })
        </p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Mời bạn nhập tên đăng nhập" } )
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.PasswordFor(model => model.PassWord, new { @class = "form-control", @placeholder = "Mời bạn nhập mật khẩu" } )
                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
    
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.TextBoxFor(model => model.Status, new { @class = "form-control", @placeholder = "Mời bạn nhập trạng thái" } )
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

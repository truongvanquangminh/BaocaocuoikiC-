<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quang Minh Shop</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Assets/Client/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Assets/Client/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Assets/Client/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Assets/Client/css/style.css">
    <link rel="stylesheet" href="~/Assets/Client/css/responsive.css">
</head>
<body>
    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo">
                        <h1><a href="./">Quang Minh <span>STORE</span></a></h1>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="shopping-item">
                        <a href="">Giỏ hàng  <i class="fa fa-shopping-cart"></i> </a>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End site branding area -->

    <div class="mainmenu-area">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Trang chủ</a></li>
                        <li><a href="#">Sản phẩm đơn lẻ </a></li>
                        <li><a href="#">Giỏ hàng</a></li>
                        <li><a href="#">Thủ tục thanh toán</a></li>
                        <li><a href="#">Danh mục</a></li>
                        <li><a href="#">Mục khác</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- End mainmenu area -->

    <div class="slider-area">
        <!-- Slider -->
        <div class="block-slider block-slider4">
            <ul class="" id="bxslider-home4">
                <li>
                    <img src="https://giaygiare.vn/upload/banner/giay-adidas-ultra-boost-20-new-2020.jpg" alt="Slide">
                </li>
                <li>
                    <img src="https://giaygiare.vn/upload/banner/chuong-trinh-khach-hang-than-thiet-nhan-nhieu-uu-dai-lon.png" alt="Slide">
                </li>
                <li>
                    <img src="https://giaygiare.vn/upload/banner/cap-nhat-nhung-mau-yeezy-moi-nhat-2019.png" alt="Slide">
                </li>
                <li>
                    <img src="~/Assets/Client/img/h4-slide4.png" alt="Slide">
                    <div class="caption-group">
                        <h2 class="caption title">
                            Quang Minh <span class="primary"> <strong>Store</strong></span>
                        </h2>
                        <h4 class="caption subtitle">Sale off <span class="btn-danger">20%</span></h4>
                        <a class="caption button-radius" href="#"><span class="icon"></span>Shop now</a>
                    </div>
                </li>
            </ul>
        </div>
        <!-- ./Slider -->
    </div> <!-- End slider area -->


    @RenderBody()

    <div class="brands-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="brand-wrapper">
                        <div class="brand-list">
                            <img src="https://cdn.yousport.vn/Media/Partners/icon-mitre.png" alt="Mitre">
                            <img src="https://cdn.yousport.vn/Media/Partners/icon-pan.png" alt="Pan">
                            <img src="https://cdn.yousport.vn/Media/Partners/partners-jgbl.png" alt="Jogarbola">
                            <img src="https://cdn.yousport.vn/Media/Partners/icon-akka-slogan-1.png" alt="Akka">
                            <img src="https://cdn.yousport.vn/Media/Partners/logo-mira-icon-1.jpg" alt="Mira">
                            <img src="https://cdn.yousport.vn/Media/Partners/logo-kamito-icon-1.jpg" alt="Kamito">
                            <img src="https://cdn.yousport.vn/Media/Partners/icon-mizuno.png" alt="Mizuno">
                            <img src="https://cdn.yousport.vn/Media/Partners/icon-dong-luc.png" alt="Động lực">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End brands area -->

    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2>Quang Minh<span> Store</span></h2>
